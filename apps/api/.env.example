# ============================================
# QANexus API - Environment Configuration
# ============================================
# Copy to .env: cp .env.example .env
# ============================================

# ============================================
# Server
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database
# ============================================
# Option 1: Neon (Production/Free Tier)
DATABASE_URL=postgres://user:password@ep-xxx.us-east-1.aws.neon.tech/qanexus?sslmode=require

# Option 2: Local Docker (Development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=qanexus
DB_PASSWORD=qanexus_dev_password
DB_NAME=qanexus
DB_SSL=false

# ============================================
# Authentication
# ============================================
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRATION=1d

# ============================================
# AI Provider
# ============================================
# Options: mock | azure | local
AI_PROVIDER=mock

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_GPT4=gpt-4
AZURE_OPENAI_DEPLOYMENT_EMBEDDING=text-embedding-ada-002

# Local Ollama Configuration
LOCAL_LLM_BASE_URL=http://localhost:11434/v1
LOCAL_EMBEDDING_BASE_URL=http://localhost:11434/v1

# ============================================
# Vector Store
# ============================================
VECTOR_STORE=pgvector

# ============================================
# Redis (Optional)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Security
# ============================================
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
